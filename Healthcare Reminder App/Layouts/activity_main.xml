<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- App Name and Description -->

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:gravity="center"
        android:text="HealthCare Reminder App"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/app_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminds you to take medicines, speaks out medicine names, and more!"
        android:textSize="16sp"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <!-- Login/Signup Button -->
    <LinearLayout
        android:id="@+id/auth_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"/>
    </LinearLayout>

    <!-- Navigation to Features -->
    <LinearLayout
        android:id="@+id/feature_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/app_description"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AddMedicine"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/view_medicines_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Medicines"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/medicine_reminder_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medicine Reminder"
            android:layout_marginBottom="16dp"/>





    </LinearLayout>

</RelativeLayout>
</ScrollView>
